<canvas id="microscope-canvas"></canvas>

<script>
  // Variable to store the animation ID so we can stop it later
  let animationFrameId: number | null = null;

  function initMicroscope() {
    const canvas = document.getElementById('microscope-canvas') as HTMLCanvasElement | null;
    // Safety check: If canvas is gone, stop everything.
    if (!canvas) {
      if (animationFrameId) cancelAnimationFrame(animationFrameId);
      return;
    }

    const ctx = canvas.getContext('2d');
    if (!ctx) return;

    // CONFIGURATION: Adjusted for transparency/subtlety
    const config = {
      particleCount: 40,         // Reduced count slightly for cleaner look
      connectionDist: 150,       
      baseColor: { r: 45, g: 90, b: 69 }, // Jungle Green
      particleOpacity: 0.3,      // Reduced from 0.6 to 0.3
      lineOpacity: 0.1           // Reduced from 0.25 to 0.1
    };

    let width = window.innerWidth;
    let height = window.innerHeight;

    class Particle {
      x: number;
      y: number;
      vx: number;
      vy: number;
      size: number;

      constructor() {
        this.x = Math.random() * width;
        this.y = Math.random() * height;
        // Velocity: Keep drift slow and biological
        this.vx = (Math.random() - 0.5) * 0.4;
        this.vy = (Math.random() - 0.5) * 0.4;
        // Size: Random variation
        this.size = Math.random() * 2.5 + 1.5;
      }

      update() {
        this.x += this.vx;
        this.y += this.vy;

        // Bounce off edges
        if (this.x < 0 || this.x > width) this.vx *= -1;
        if (this.y < 0 || this.y > height) this.vy *= -1;
      }

      draw() {
        if (!ctx) return;
        ctx.beginPath();
        ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
        ctx.fillStyle = `rgba(${config.baseColor.r}, ${config.baseColor.g}, ${config.baseColor.b}, ${config.particleOpacity})`;
        ctx.fill();
      }
    }

    const particles: Particle[] = [];

    const resize = () => {
      width = window.innerWidth;
      height = window.innerHeight;
      if (canvas) {
        canvas.width = width;
        canvas.height = height;
      }
    };

    const animate = () => {
      if (!ctx) return;
      ctx.clearRect(0, 0, width, height);

      particles.forEach((p, index) => {
        p.update();
        p.draw();

        // Draw Connections
        for (let j = index + 1; j < particles.length; j++) {
          const p2 = particles[j];
          const dx = p.x - p2.x;
          const dy = p.y - p2.y;
          const dist = Math.sqrt(dx * dx + dy * dy);

          if (dist < config.connectionDist) {
            ctx.beginPath();
            // Opacity fades based on distance
            const alpha = config.lineOpacity - (dist / config.connectionDist) * config.lineOpacity;
            ctx.strokeStyle = `rgba(${config.baseColor.r}, ${config.baseColor.g}, ${config.baseColor.b}, ${alpha})`;
            ctx.lineWidth = 1;
            ctx.moveTo(p.x, p.y);
            ctx.lineTo(p2.x, p2.y);
            ctx.stroke();
          }
        }
      });
      animationFrameId = requestAnimationFrame(animate);
    };

    // Initialize
    resize();
    // Reset particles on init so they don't pile up if function runs twice
    particles.length = 0;
    for (let i = 0; i < config.particleCount; i++) {
      particles.push(new Particle());
    }

    // Cancel any existing loop before starting a new one
    if (animationFrameId) cancelAnimationFrame(animationFrameId);
    animate();

    // Listen for resize
    window.addEventListener('resize', resize);
  }

  // LIFECYCLE HOOK
  // Runs on initial load AND every navigation
  document.addEventListener('astro:page-load', initMicroscope);
</script>

<style>
  #microscope-canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* Layering: -1 puts it behind content */
    z-index: -1; 
    pointer-events: none;
    
    /* VISIBILITY: Reduced global opacity for a "barely there" look */
    opacity: 0.2;
  }
</style>