---
/* src/components/Footer.astro */
const currentYear = new Date().getFullYear();
const EMAIL_ADDRESS = "work@heatshockpineapple.com";

// DNA K Sequence (Portfolio Unique Feature)
const dnaKRaw = `5NRO DNAK AA:MGKIIGIDLGTTNSCVAIMDGTTPRVLENAEGDRTTPSIIAYTQDGCTLVGQPAKRQAVTNPQNTLFAIKRLIGRRFQDE`;
const dnaK = dnaKRaw.replace(/AA:|\s+/g, "");

// Repeat it 3 times for the seamless loop effect
const tape = `${dnaK}   ${dnaK}   ${dnaK}`;
---

<footer class="site-footer site-footer--dna">
  <div class="sequence-tape" aria-hidden="true">
    <div class="scrolling-text">{tape}</div>
  </div>

  <div class="footer-inner">
    
    <div class="footer-brand">
      
      <div class="brand-lockup">
        <img 
          src="public/android-chrome-512x512.png" 
          alt="Heat Shock Pineapple" 
          class="footer-logo" 
          height="32" 
          width="32" 
        />
        
        <div class="brand-block">
          <span class="word-top">HEATSHOCK</span>
          <span class="word-btm gold">PINEAPPLE</span>
        </div>
      </div>
      
      <div class="meta-group">
        <p class="copyright">&copy; {currentYear} Jason Hernandez</p>
        <p class="location">Based in Los Angeles</p>
      </div>
    </div>

    <div class="footer-links">
      <a href={`mailto:${EMAIL_ADDRESS}`}>Email</a>
      <a href="https://github.com/jarohe318" target="_blank" rel="noopener noreferrer">GitHub</a>
      <a href="https://heatshockpineapple.substack.com" target="_blank" rel="noopener noreferrer">Substack</a>
      <a href="https://www.linkedin.com/in/jrh318" target="_blank" rel="noopener noreferrer">LinkedIn</a>
    </div>

  </div>
</footer>

<style>
  /* =========================================
     FOOTER LAYOUT
     ========================================= */
  .site-footer {
    width: 100%;
    /* TOKEN: Matches Header Background (Jungle Green) */
    background: var(--color-jungle-800, #243b30); 
    /* TOKEN: Matches Header Text (White) */
    color: var(--text-inverse, #ffffff);
    
    margin-top: 6rem;
    padding-bottom: 3rem; 
    overflow: hidden;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-inner {
    width: 100%;
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 1.5rem; /* Matches Hub padding */
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  @media (min-width: 768px) {
    .footer-inner {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-end;
    }
  }

  /* =========================================
     BRANDING (Imported from Hub)
     ========================================= */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1rem; 
  }

  .brand-lockup {
    display: flex;
    align-items: center;
    /* MATCH HEADER GAP EXACTLY */
    gap: 0.4rem;
  }

  .footer-logo {
    height: 32px;
    width: auto; 
    border-radius: 4px;
    display: block;
    object-fit: contain;
  }

  .brand-block {
    display: flex;
    flex-direction: column;
    justify-content: center;
    line-height: 1;
    /* MATCH HEADER OFFSET */
    transform: translateY(1px); 
  }

  .word-top, .word-btm {
    font-family: var(--font-sans);
    font-weight: 900; 
    font-size: 0.85rem; 
    color: inherit; 
    display: block;
    -webkit-font-smoothing: antialiased;
  }

  .word-top {
    letter-spacing: 0.3em;
  }

  .word-btm {
    /* THE GOLDILOCKS NUMBER */
    letter-spacing: 0.4065em;
  }

  .gold {
    color: var(--brand-secondary, #ffd700);
  }

  /* === METADATA === */
  .meta-group {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .copyright, .location {
    font-family: var(--font-mono);
    font-size: 0.75rem; 
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
    line-height: 1.4;
  }

  /* =========================================
     LINKS
     ========================================= */
  .footer-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .footer-links a {
    font-family: var(--font-sans);
    font-size: 0.75rem; 
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-bottom: 1px solid transparent;
    padding-bottom: 2px;
  }

  .footer-links a:hover {
    color: var(--text-inverse, #ffffff);
    letter-spacing: 0.15em;
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
  }

  /* =========================================
     DNA TAPE (Portfolio Exclusive)
     ========================================= */
  .sequence-tape {
    width: 100%;
    background: rgba(0, 0, 0, 0.20); /* Darker track */
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    padding: 0.25rem 0; 
    margin-bottom: 2rem;
    user-select: none;
  }

  .scrolling-text {
    white-space: nowrap;
    font-family: var(--font-mono);
    font-size: 0.70rem;
    letter-spacing: 0.2rem;
    color: var(--brand-secondary, #ffd700);
    opacity: 0.85;
    display: inline-block;
    animation: footer-scroll 120s linear infinite;
  }

  @keyframes footer-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  @media (prefers-reduced-motion: reduce) {
    .scrolling-text {
      animation: none;
    }
  }
</style>