<style>
  /* === 1. CONTAINER (Matches Blog) === */
  .site-footer {
    /* Locked to Deep Jungle Green */
    background: #243b30; 
    color: #fff;
    padding-bottom: 2.5rem; /* Padding at bottom, top is handled by tape */
    margin-top: auto;
    border-top: 1px solid rgba(255,255,255,0.1);
    position: relative;
    overflow: hidden; /* Keeps the tape from scrolling the page */
  }

  /* === 2. THE DNA TAPE (Portfolio Exclusive) === */
  .sequence-tape {
    width: 100%;
    /* Darker track to sit nicely on the Green background */
    background: rgba(0, 0, 0, 0.2); 
    border-bottom: 1px solid rgba(255,255,255,0.05);
    padding: 0.6rem 0;
    margin-bottom: 2rem; /* Spacing between tape and content */
    user-select: none;
  }

  .scrolling-text {
    white-space: nowrap;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    letter-spacing: 0.15em;
    
    /* GOLD TEXT to match the Pineapple branding below */
    color: var(--accent-secondary); 
    opacity: 0.8;
    
    animation: scroll 120s linear infinite; 
  }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  /* === 3. LAYOUT & CONTENT (Matches Blog) === */
  .footer-inner {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Desktop: Side-by-side layout */
  @media (min-width: 768px) {
    .footer-inner {
      flex-direction: row;
      justify-content: space-between;
      align-items: center; 
      gap: 0;
    }
  }

  /* BRAND COLUMN */
  .footer-brand-col {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .footer-brand {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 600;
    color: #ffffff;
    word-spacing: -0.15em;
  }
  
  .gold { 
    color: var(--accent-secondary); 
    font-style: normal; 
    font-size: 1.02em;
    margin-left: 0;
  }

  .copyright {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* LINKS COLUMN */
  .footer-links-col {
    display: flex;
    align-items: center;
  }

  .link-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap; 
    gap: 2rem; 
  }

  .link-list li { display: flex; align-items: center; }

  .link-list a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-family: var(--font-sans);
    font-size: 0.95rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .link-list a:hover { 
    color: #ffffff; 
  }
</style>