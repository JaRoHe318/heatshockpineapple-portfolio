---
/* src/components/Footer.astro */
const currentYear = new Date().getFullYear();

// DNA K Sequence (Portfolio Unique Feature)
const dnaKRaw = `5NRO DNAK AA:MGKIIGIDLGTTNSCVAIMDGTTPRVLENAEGDRTTPSIIAYTQDGCTLVGQPAKRQAVTNPQNTLFAIKRLIGRRFQDE`;
const dnaK = dnaKRaw.replace(/AA:|\s+/g, "");

// Repeat it 3 times for the seamless loop effect
const tape = `${dnaK}   ${dnaK}   ${dnaK}`;
---

<footer class="site-footer site-footer--dna">
  <div class="sequence-tape" aria-hidden="true">
    <div class="scrolling-text">{tape}</div>
  </div>

  <div class="footer-inner">
    <div class="footer-brand">
      <span class="brand-text">Heat Shock<span class="gold">Pineapple</span></span>
      <p class="copyright">&copy; {currentYear} Jason Hernandez</p>
    </div>

    <div class="footer-links">
      <a href="https://github.com/jarohe318" target="_blank" rel="noopener noreferrer">GitHub</a>
      <a href="https://heatshockpineapple.substack.com" target="_blank" rel="noopener noreferrer">Substack</a>
      <a href="https://www.linkedin.com/in/jrh318" target="_blank" rel="noopener noreferrer">LinkedIn</a>
    </div>
  </div>
</footer>

<style>
  /* =========================================
     FOOTER LAYOUT
     ========================================= */
  .site-footer {
    width: 100%;
    /* TOKEN: Matches Header Background (Jungle Green) */
    background: var(--color-jungle-800);
    /* TOKEN: Matches Header Text (White) */
    color: var(--text-inverse);
    
    /* Spacing */
    margin-top: 6rem;
    padding-bottom: 3rem; 
    overflow: hidden;
    
    /* Border: Subtle separator from the page body */
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-inner {
    width: 100%;
    /* MATCHES HEADER: Keeps alignment consistent */
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 2rem;
    
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Desktop Row Layout */
  @media (min-width: 768px) {
    .footer-inner {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-end;
    }
  }

  /* =========================================
     CONTENT STYLING
     ========================================= */
  
  /* BRANDING */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .brand-text {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-inverse);
    word-spacing: -0.15em;
  }

  /* UTILITY: Gold Accent (Matches Header) */
  .gold {
    font-style: normal;
    margin-left: 0.2em;
    color: var(--brand-secondary);
  }

  .copyright {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
  }

  /* LINKS */
  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    font-family: var(--font-sans);
    font-size: 0.95rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-links a:hover {
    color: var(--text-inverse);
  }

  /* =========================================
     DNA TAPE (Portfolio Exclusive)
     ========================================= */
  .sequence-tape {
    width: 100%;
    background: rgba(0, 0, 0, 0.20); /* Darker track */
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    
    /* THE FIX: Reduced padding from 0.6rem to 0.25rem */
    padding: 0.25rem 0; 
    
    margin-bottom: 2rem;
    user-select: none;
  }

  .scrolling-text {
    white-space: nowrap;
    font-family: var(--font-mono);
    font-size: 0.70rem;
    letter-spacing: 0.2rem;
    color: var(--brand-secondary); /* Gold Letters */
    opacity: 0.85;
    display: inline-block;
    /* Animation: Slow infinite loop */
    animation: footer-scroll 120s linear infinite;
  }

  @keyframes footer-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  /* Reduce Motion Preference */
  @media (prefers-reduced-motion: reduce) {
    .scrolling-text {
      animation: none;
    }
  }
</style>