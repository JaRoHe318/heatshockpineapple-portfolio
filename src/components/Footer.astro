<style>
  .site-footer {
    margin-top: 6rem;
    border-top: 1px solid var(--border);
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-muted);
    overflow: hidden; /* Important for the scroller */
  }

  /* The Container for the Tape */
  .sequence-tape {
    width: 100%;
    background: var(--bg-surface);
    border-bottom: 1px solid var(--border);
    padding: 0.4rem 0;
    margin-bottom: 2rem;
    user-select: none; /* Aesthetic only, don't let them select it */
    opacity: 0.5;
  }

  /* The Moving Text */
  .scrolling-text {
    white-space: nowrap;
    font-size: 0.7rem;
    letter-spacing: 0.1em;
    color: var(--accent-primary);
    animation: scroll 120s linear infinite; /* Very slow, ambient drift */
  }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .footer-content {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 2rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    border-bottom: none;
    color: var(--text-muted);
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: var(--accent-primary);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>