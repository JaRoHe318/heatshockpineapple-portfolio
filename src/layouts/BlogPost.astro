---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  publishedDate: Date;
  slug: string;
}

const { title, description, publishedDate, slug } = Astro.props;

// Format the date for the citation
const year = publishedDate.getFullYear();
const today = new Date().toISOString().split('T')[0];
const url = `https://heatshockpineapple.com/blog/${slug}`;

// The BibTeX Template
const bibtex = `@misc{hernandez${year},
  author = {Hernandez, Jason},
  title = {${title}},
  year = {${year}},
  howpublished = {\\url{${url}}},
  note = {Accessed: ${today}}
}`;
---

<BaseLayout 
  title={title} 
  description={description} 
  publishedDate={publishedDate} 
  type="article"
>
  <article class="post-container">
    <header class="post-header">
      <time class="mono-meta">{publishedDate.toLocaleDateString('en-US', { dateStyle: 'long' })}</time>
      <h1>{title}</h1>
    </header>
    
    <div class="post-content">
      <slot />
    </div>

    <div class="citation-box">
      <h3>Cite this post</h3>
      <p class="citation-desc">
        If you found this useful for your own work, you can cite it using the BibTeX entry below.
      </p>
      
      <div class="code-block-wrapper">
        <pre><code id="bibtex-code">{bibtex}</code></pre>
        <button id="copy-btn" class="copy-button" aria-label="Copy to clipboard">
          Copy BibTeX
        </button>
      </div>
      <span id="copy-feedback" class="copy-feedback">Copied to clipboard!</span>
    </div>

    <div class="post-footer">
      <a href="/blog" class="back-link">‚Üê Back to Blog</a>
    </div>
  </article>
</BaseLayout>

<script>
  const btn = document.getElementById('copy-btn');
  const code = document.getElementById('bibtex-code');
  const feedback = document.getElementById('copy-feedback');

  if (btn && code && feedback) {
    btn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(code.innerText);
        
        // Show feedback
        feedback.classList.add('visible');
        btn.innerText = 'Copied!';
        
        // Reset after 2 seconds
        setTimeout(() => {
          feedback.classList.remove('visible');
          btn.innerText = 'Copy BibTeX';
        }, 2000);
      } catch (err) {
        console.error('Failed to copy text: ', err);
      }
    });
  }
</script>

<style>
  /* Reuse global post styles but add Citation specific styles */
  .citation-box {
    margin-top: 4rem;
    padding: 1.5rem;
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: var(--radius);
  }

  .citation-box h3 {
    margin-top: 0;
    font-size: 1rem;
    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .citation-desc {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .code-block-wrapper {
    position: relative;
    background: var(--bg-paper);
    border: 1px solid var(--border-strong);
    border-radius: 4px;
    padding: 1rem;
    overflow-x: auto;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  pre {
    margin: 0;
    white-space: pre-wrap;
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--text-body);
    flex: 1;
  }

  .copy-button {
    background: transparent;
    border: 1px solid var(--border-strong);
    border-radius: 4px;
    padding: 0.3rem 0.6rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    cursor: pointer;
    color: var(--text-muted);
    margin-left: 1rem;
    transition: all 0.2s;
  }

  .copy-button:hover {
    color: var(--accent-primary);
    border-color: var(--accent-primary);
    background: rgba(45, 90, 69, 0.05);
  }

  .copy-feedback {
    display: block;
    margin-top: 0.5rem;
    font-size: 0.8rem;
    color: var(--accent-primary);
    font-family: var(--font-mono);
    opacity: 0;
    transition: opacity 0.3s;
    height: 1.2em;
  }

  .copy-feedback.visible {
    opacity: 1;
  }
</style>