---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found" description="404 Error">
  <main class="error-wrapper">
    <section class="error-container">
      
      <img 
        src="/android-chrome-512x512.png" 
        alt="Chill Pineapple" 
        class="error-mascot" 
      />

      <div class="denature-effect">
        <h1>404</h1>
        <div class="denature-sub">Signal Lost</div>
      </div>
      
      <p class="error-text">
        The page you are looking for has denatured.
        <br />
        The link may be broken, or the content has unfolded into nonsense.
      </p>
      
      <a href="/" class="back-link">Refold (Return Home)</a>
    </section>
  </main>
</BaseLayout>

<style>
  /* Wrapper to center it vertically/horizontally on the full page */
  .error-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 70vh; /* Takes up most of the screen */
    padding: 2rem;
  }

  .error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 600px;
  }

  /* Mascot Styling */
  .error-mascot {
    width: 150px;
    height: auto;
    margin-bottom: 2rem;
    animation: float 6s ease-in-out infinite;
    /* Subtle shadow to separate it from bg */
    filter: drop-shadow(0 10px 15px rgba(0,0,0,0.1));
  }

  /* The Heat Shock Animation */
  .denature-effect h1 {
    font-size: 6rem;
    font-family: var(--font-mono);
    color: var(--accent-primary);
    margin: 0;
    line-height: 1;
    position: relative;
    
    /* The animation: Blur and expand spacing */
    animation: heatshock 3s infinite alternate ease-in-out;
  }

  .denature-sub {
    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--text-muted);
    font-size: 1.2rem;
    margin-top: 1rem;
    opacity: 0.8;
  }

  .error-text {
    margin-top: 2rem;
    margin-bottom: 2.5rem;
    font-size: 1.1rem;
    /* FIXED: Updated to match your global variable */
    color: var(--text-main); 
    line-height: 1.6;
  }

  .back-link {
    display: inline-block;
    font-family: var(--font-mono);
    text-decoration: none;
    padding: 0.8rem 1.5rem;
    /* FIXED: Updated to match your global variable */
    border: 1px solid var(--border); 
    color: var(--text-main);
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .back-link:hover {
    border-color: var(--accent-primary);
    background: var(--bg-surface);
    color: var(--accent-primary);
    transform: translateY(-2px);
  }

  @keyframes heatshock {
    0% {
      filter: blur(0px);
      letter-spacing: -0.05em;
      transform: scale(1);
      opacity: 1;
    }
    100% {
      filter: blur(4px);
      letter-spacing: 0.15em;
      transform: scale(1.05);
      opacity: 0.6;
    }
  }

  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-15px); }
    100% { transform: translateY(0px); }
  }
</style>